<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.text.Text?>

<?import javafx.scene.control.Slider?>
<BorderPane id="borderPane" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" fx:controller="NimController">
    <center>
        <Pane fx:id="pane">
        </Pane>
    </center>

    <right>
        <Slider fx:id="slider" orientation="VERTICAL" blockIncrement="5" majorTickUnit="0.5" max="10.0" minorTickCount="3" showTickLabels="true" showTickMarks="true"></Slider>
    </right>
    <bottom>
        <ToolBar fx:id="toolbar">
            <items>
                <Text fx:id="text">Longueurs des tiges</Text>
                <TextField fx:id="field1" prefWidth="50" />
                <TextField fx:id="field2" prefWidth="50" />
                <TextField fx:id="field3" prefWidth="50" />
                <TextField fx:id="field4" prefWidth="50" />
                <TextField fx:id="field5" prefWidth="50" />
                <TextField fx:id="field6" prefWidth="50" />
                <TextField fx:id="field7" prefWidth="50" />
                <TextField fx:id="field8" prefWidth="50" />
                <TextField fx:id="field9" prefWidth="50" />
                <TextField fx:id="field10" prefWidth="50" />
                <Separator />
                 <Button fx:id="jouer" text="Jouer" />  
            </items>
        </ToolBar>
    </bottom>
    
</BorderPane>
